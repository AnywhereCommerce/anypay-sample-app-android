<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/backgroundColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="3">

  <ImageView
      android:id="@+id/logo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:src="@drawable/home_logo"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/imageSale"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="7dp"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:contentDescription="@string/Sale"
          android:scaleType="fitCenter"
          android:src="@drawable/button_sale" />

      <ImageButton
          android:id="@+id/imageRefund"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="7dp"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:contentDescription="@string/Refund"
          android:scaleType="fitCenter"
          android:src="@drawable/button_refund" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <ImageButton
          android:id="@+id/imageHistory"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="7dp"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:contentDescription="@string/Summary"
          android:scaleType="fitCenter"
          android:src="@drawable/button_activity" />

      <ImageButton
          android:id="@+id/imageSettings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="7dp"
          android:layout_weight="1"
          android:background="@color/transparent"
          android:contentDescription="@string/Settings"
          android:scaleType="fitCenter"
          android:src="@drawable/button_settings" />
    </LinearLayout>
  </LinearLayout>

</LinearLayout>
